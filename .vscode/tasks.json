{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ kompiluj aktywny plik",
			"command": "/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${fileDirname}/**.cpp",
				// "${fileDirname}/Testowanie/**.cpp",
				// "${fileDirname}/test.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "kompilator: /bin/g++"
		}
	]
}